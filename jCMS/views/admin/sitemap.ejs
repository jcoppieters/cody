		         <li id="id_1" class="closed" rel="root"><a href="#"><ins>&nbsp;</ins>System</a>
		            <%- controller.getAdminTree() %>
		         </li>
	          <% } %>
	        </ul>
	      </div>
	    </div>
	    
	    <div id="right_cont">
			</div>
       
		</div>
 
		<% include footer.ejs %>
  </div>

				<input type="button" value="Edit" onclick="doEdit()" >
			
	      <div id="tree">
	        <ul>
	          <li id="id_0" class="open" rel="root"><a href="#"><ins>&nbsp;</ins>Website</a>
	            <%- controller.getTree() %>
	          </li>
	          
	          <li id="id_x" class="closed" rel="root"><a href="#"><ins>&nbsp;</ins>General</a>
	            <%- controller.getGlobalTree() %>
	          </li>
	         
